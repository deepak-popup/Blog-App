<%= form_with model: [user, article] do |f| %>
  <ul>
    <% article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <br>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div>
  <br>
  <div>
    <%= f.label :status %> <br>
    <%= f.select :status, ["public", "private", "archived"], selected: "public" %>
  </div>
  <br>
  <div>
    <%= f.submit article.persisted? ? "Edit" : "Save" %>
  </div>
<% end %>